{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "ignore": [],
      "attributePosition": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf"
    },
    "javascript": {
      "formatter": {
        "arrowParentheses": "always",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "jsxQuoteStyle": "double",
        "quoteProperties": "asNeeded",
        "semicolons": "always"
      }
    },
    "json": {
      "formatter": {
        "trailingCommas": "none"
      }
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "files": {
      "ignore": ["dist/**"]
    }
  }
  